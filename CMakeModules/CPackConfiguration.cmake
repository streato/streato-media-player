  set(CPACK_PROJECT_CONFIG_FILE ${CMAKE_BINARY_DIR}/CPackGeneratedConfig.cmake)

  include(CPack)
  cpack_add_component(Core DISPLAY_NAME "Streato Media Player" DESCRIPTION "Streato Media Player (Core Application)" REQUIRED)
