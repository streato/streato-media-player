set(PROJECT_SOURCE_DIR @PROJECT_SOURCE_DIR@)

execute_process(COMMAND @QTROOT@/bin/windeployqt.exe --verbose 9 --qmldir @SOURCE_ROOT@/src/ui ${CMAKE_INSTALL_PREFIX}/StreatoMediaPlayer.exe)

